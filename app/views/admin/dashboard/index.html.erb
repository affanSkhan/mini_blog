<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">
        <i class="fas fa-tachometer-alt"></i> Admin Dashboard
      </h1>
      
      <!-- Statistics Cards -->
      <div class="row mb-4">
        <div class="col-md-3 mb-3">
          <div class="card bg-primary text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4 class="card-title"><%= @total_users %></h4>
                  <p class="card-text">Total Users</p>
                </div>
                <div class="align-self-center">
                  <i class="fas fa-users fa-2x"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-3">
          <div class="card bg-success text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4 class="card-title"><%= @total_posts %></h4>
                  <p class="card-text">Total Posts</p>
                </div>
                <div class="align-self-center">
                  <i class="fas fa-file-alt fa-2x"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-3">
          <div class="card bg-info text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4 class="card-title"><%= @published_posts %></h4>
                  <p class="card-text">Published Posts</p>
                </div>
                <div class="align-self-center">
                  <i class="fas fa-check-circle fa-2x"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-3 mb-3">
          <div class="card bg-warning text-white">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <h4 class="card-title"><%= @total_comments %></h4>
                  <p class="card-text">Total Comments</p>
                </div>
                <div class="align-self-center">
                  <i class="fas fa-comments fa-2x"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-4 mb-2">
                  <%= link_to admin_users_path, class: "btn btn-primary w-100" do %>
                    <i class="fas fa-users"></i> Manage Users
                  <% end %>
                </div>
                <div class="col-md-4 mb-2">
                  <%= link_to posts_path, class: "btn btn-success w-100" do %>
                    <i class="fas fa-file-alt"></i> View All Posts
                  <% end %>
                </div>
                <div class="col-md-4 mb-2">
                  <%= link_to dashboard_path, class: "btn btn-info w-100" do %>
                    <i class="fas fa-home"></i> User Dashboard
                  <% end %>
                </div>
                <div class="col-md-4 mb-2">
                  <%= link_to "/sidekiq", class: "btn btn-warning w-100", target: "_blank" do %>
                    <i class="fas fa-cogs"></i> Sidekiq Dashboard
                  <% end %>
                </div>
                <div class="col-md-4 mb-2">
                  <%= link_to admin_analytics_path, class: "btn btn-info w-100" do %>
                    <i class="fas fa-chart-line"></i> Analytics Dashboard
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Users -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Recent Users</h5>
              <%= link_to "View All Users", admin_users_path, class: "btn btn-sm btn-outline-primary" %>
            </div>
            <div class="card-body">
              <% if @users.any? %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.limit(5).each do |user| %>
                        <tr>
                          <td><%= user.email %></td>
                          <td>
                            <% if user.admin? %>
                              <span class="badge bg-danger">Admin</span>
                            <% else %>
                              <span class="badge bg-secondary">User</span>
                            <% end %>
                          </td>
                          <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                          <td>
                            <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline-info" %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% else %>
                <p class="text-muted">No users found.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 