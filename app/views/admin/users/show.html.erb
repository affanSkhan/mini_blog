<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="fas fa-user"></i> User Details
        </h1>
        <%= link_to admin_users_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to Users
        <% end %>
      </div>

      <!-- User Information Card -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">User Information</h5>
            </div>
            <div class="card-body">
              <div class="row mb-3">
                <div class="col-sm-4"><strong>Email:</strong></div>
                <div class="col-sm-8"><%= @user.email %></div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-4"><strong>Role:</strong></div>
                <div class="col-sm-8">
                  <% if @user.admin? %>
                    <span class="badge bg-danger">Admin</span>
                  <% else %>
                    <span class="badge bg-secondary">User</span>
                  <% end %>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-4"><strong>Status:</strong></div>
                <div class="col-sm-8">
                  <% if @user.deleted? %>
                    <span class="badge bg-danger">Deleted</span>
                  <% else %>
                    <span class="badge bg-success">Active</span>
                  <% end %>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-4"><strong>Joined:</strong></div>
                <div class="col-sm-8"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-4"><strong>Last Updated:</strong></div>
                <div class="col-sm-8"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
              </div>
              
              <% if @user.deleted? %>
                <div class="row mb-3">
                  <div class="col-sm-4"><strong>Deleted At:</strong></div>
                  <div class="col-sm-8"><%= @user.deleted_at.strftime("%B %d, %Y at %I:%M %p") %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Statistics</h5>
            </div>
            <div class="card-body">
              <div class="row mb-3">
                <div class="col-sm-6">
                  <div class="text-center">
                    <h3 class="text-primary"><%= @user.posts.count %></h3>
                    <p class="text-muted">Total Posts</p>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="text-center">
                    <h3 class="text-success"><%= @user.posts.published.count %></h3>
                    <p class="text-muted">Published Posts</p>
                  </div>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-6">
                  <div class="text-center">
                    <h3 class="text-warning"><%= @user.posts.draft.count %></h3>
                    <p class="text-muted">Draft Posts</p>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="text-center">
                                         <h3 class="text-info"><%= @user.comments_count %></h3>
                    <p class="text-muted">Total Comments</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- User Actions -->
      <% unless @user.deleted? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">User Actions</h5>
          </div>
          <div class="card-body">
            <div class="btn-group" role="group">
              <% if @user.admin? %>
                <%= button_to "Demote to User", toggle_admin_admin_user_path(@user), 
                    method: :patch, 
                    class: "btn btn-warning",
                    data: { confirm: "Demote this user from admin?" } %>
              <% else %>
                <%= button_to "Promote to Admin", toggle_admin_admin_user_path(@user), 
                    method: :patch, 
                    class: "btn btn-success",
                    data: { confirm: "Promote this user to admin?" } %>
              <% end %>
              
              <%= button_to "Delete User", admin_user_path(@user), 
                  method: :delete, 
                  class: "btn btn-danger",
                  data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." } %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- User's Posts -->
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">User's Posts (<%= @user.posts.count %>)</h5>
          <%= link_to "View All Posts", admin_user_posts_path(@user), class: "btn btn-sm btn-outline-primary" %>
        </div>
        <div class="card-body">
          <% if @user.posts.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Comments</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @user.posts.order(created_at: :desc).limit(5).each do |post| %>
                    <tr>
                      <td>
                        <strong><%= link_to post.title, post_path(post), class: "text-decoration-none" %></strong>
                      </td>
                      <td>
                        <% if post.published? %>
                          <span class="badge bg-success">Published</span>
                        <% else %>
                          <span class="badge bg-warning">Draft</span>
                        <% end %>
                      </td>
                      <td><%= post.created_at.strftime("%B %d, %Y") %></td>
                      <td>
                        <span class="badge bg-info"><%= post.comments_count %></span>
                      </td>
                      <td>
                        <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-info" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted">This user hasn't created any posts yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 