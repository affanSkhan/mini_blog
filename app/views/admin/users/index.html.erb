<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="fas fa-users"></i> User Management
        </h1>
        <%= link_to admin_dashboard_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        <% end %>
      </div>

      <% if @users.any? %>
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">All Users (<%= @users.count %>)</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Joined</th>
                    <th>Posts</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <strong><%= user.email %></strong>
                      </td>
                      <td>
                        <% if user.admin? %>
                          <span class="badge bg-danger">Admin</span>
                        <% else %>
                          <span class="badge bg-secondary">User</span>
                        <% end %>
                      </td>
                      <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                      <td>
                        <span class="badge bg-info"><%= user.posts.count %></span>
                      </td>
                      <td>
                        <% if user.deleted? %>
                          <span class="badge bg-danger">Deleted</span>
                        <% else %>
                          <span class="badge bg-success">Active</span>
                        <% end %>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-outline-info" %>
                          
                          <% unless user.deleted? %>
                            <% if user.admin? %>
                              <%= button_to "Demote", toggle_admin_admin_user_path(user), 
                                  method: :patch, 
                                  class: "btn btn-sm btn-outline-warning",
                                  data: { confirm: "Demote this user from admin?" } %>
                            <% else %>
                              <%= button_to "Promote", toggle_admin_admin_user_path(user), 
                                  method: :patch, 
                                  class: "btn btn-sm btn-outline-success",
                                  data: { confirm: "Promote this user to admin?" } %>
                            <% end %>
                            
                            <%= button_to "Delete", admin_user_path(user), 
                                method: :delete, 
                                class: "btn btn-sm btn-outline-danger",
                                data: { confirm: "Are you sure you want to delete this user? This action cannot be undone." } %>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No users found.
        </div>
      <% end %>
    </div>
  </div>
</div> 