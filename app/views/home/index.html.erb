<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="display-4 mb-4">
        <i class="fas fa-blog text-primary"></i> Welcome to Mini Blog
      </h1>
      <p class="lead mb-4">A simple and elegant blogging platform built with Ruby on Rails</p>
      
      <!-- Search Bar -->
      <div class="row mb-5">
        <div class="col-md-8 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title mb-3">
                <i class="fas fa-search"></i> Discover Posts
              </h5>
              <%= form_with url: posts_path, method: :get, local: true, class: "d-flex" do |form| %>
                <%= form.text_field :search, 
                    class: "form-control me-2", 
                    placeholder: "Search posts by title or content..." %>
                <%= form.submit "Search", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row mt-5">
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <i class="fas fa-user-plus text-primary"></i> Get Started
              </h5>
              <p class="card-text">Create an account and start sharing your thoughts with the world.</p>
              <%= link_to new_user_registration_path, class: "btn btn-primary" do %>
                <i class="fas fa-user-plus"></i> Sign Up
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <i class="fas fa-sign-in-alt text-success"></i> Already have an account?
              </h5>
              <p class="card-text">Sign in to access your dashboard and manage your blog.</p>
              <%= link_to new_user_session_path, class: "btn btn-outline-primary" do %>
                <i class="fas fa-sign-in-alt"></i> Sign In
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <i class="fas fa-book-open text-info"></i> Read Posts
              </h5>
              <p class="card-text">Browse and read posts from our community of writers.</p>
              <%= link_to posts_path, class: "btn btn-success" do %>
                <i class="fas fa-book-open"></i> View Posts
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
