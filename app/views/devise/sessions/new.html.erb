<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="text-center mb-5">
        <h1 class="display-6 fw-bold text-primary mb-3">
          <i class="fas fa-sign-in-alt me-2"></i>Welcome Back
        </h1>
        <p class="lead text-muted">Sign in to your account to continue</p>
      </div>
      
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium" do %>
                <i class="fas fa-envelope me-2"></i>Email Address
              <% end %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email", 
                  class: "form-control form-control-lg",
                  placeholder: "Enter your email" %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-medium" do %>
                <i class="fas fa-lock me-2"></i>Password
              <% end %>
              <%= f.password_field :password, 
                  autocomplete: "current-password", 
                  class: "form-control form-control-lg",
                  placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" do %>
                  Remember me for 30 days
                <% end %>
              </div>
            <% end %>

            <div class="d-grid mb-4">
              <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <p class="text-muted mb-3">Don't have an account?</p>
            <%= link_to new_user_registration_path, class: "btn btn-outline-primary" do %>
              <i class="fas fa-user-plus me-2"></i>Create Account
            <% end %>
          </div>
          
          <hr class="my-4">
          
          <div class="text-center">
            <%= link_to new_password_path(resource_name), class: "text-decoration-none" do %>
              <i class="fas fa-key me-1"></i>Forgot your password?
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
