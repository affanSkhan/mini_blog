<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
      <div class="text-center mb-5">
        <h1 class="display-6 fw-bold text-primary mb-3">
          <i class="fas fa-user-plus me-2"></i>Join Mini Blog
        </h1>
        <p class="lead text-muted">Create your account and start sharing your stories</p>
      </div>
      
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium" do %>
                <i class="fas fa-envelope me-2"></i>Email Address
              <% end %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email", 
                  class: "form-control form-control-lg",
                  placeholder: "Enter your email address" %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-medium" do %>
                <i class="fas fa-lock me-2"></i>Password
                <% if @minimum_password_length %>
                  <small class="text-muted ms-2">(<%= @minimum_password_length %> characters minimum)</small>
                <% end %>
              <% end %>
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg",
                  placeholder: "Create a strong password" %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-medium" do %>
                <i class="fas fa-lock me-2"></i>Confirm Password
              <% end %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg",
                  placeholder: "Confirm your password" %>
            </div>

            <div class="d-grid mb-4">
              <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <p class="text-muted mb-3">Already have an account?</p>
            <%= link_to new_user_session_path, class: "btn btn-outline-primary" do %>
              <i class="fas fa-sign-in-alt me-2"></i>Sign In
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-4">
        <p class="text-muted small">
          By creating an account, you agree to our 
          <%= link_to "Terms of Service", "#", class: "text-decoration-none" %> and 
          <%= link_to "Privacy Policy", "#", class: "text-decoration-none" %>.
        </p>
      </div>
    </div>
  </div>
</div>
