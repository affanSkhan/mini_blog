<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="fas fa-blog"></i> Blog Posts
          <% if @posts.any? %>
            <span class="badge bg-secondary ms-2"><%= @posts.count %></span>
          <% end %>
        </h1>
        <% if user_signed_in? %>
          <%= link_to new_post_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus"></i> New Post
          <% end %>
        <% end %>
      </div>

      <!-- Search and Filters -->
      <%= render 'shared/post_filters' %>

      <!-- Results Summary -->
      <% if @filter_params&.values&.any?(&:present?) %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          Showing <%= @posts.count %> post<%= 's' unless @posts.count == 1 %> 
          <% if @filter_params[:search].present? %>
            matching "<%= @filter_params[:search] %>"
          <% end %>
        </div>
      <% end %>

      <!-- Posts Grid -->
      <% cache @posts do %>
        <% if @posts.any? %>
          <div class="row">
            <% @posts.each do |post| %>
              <div class="col-lg-4 col-md-6 mb-4">
                <div class="card post-card h-100 shadow-sm">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                      <h5 class="card-title">
                        <%= link_to post.title, post_path(post) %>
                      </h5>
                      <span class="badge <%= post.published? ? 'bg-success' : 'bg-warning' %>">
                        <i class="fas fa-<%= post.published? ? 'check-circle' : 'clock' %> me-1"></i>
                        <%= post.status.titleize %>
                      </span>
                    </div>
                    
                    <div class="post-meta mb-3">
                      <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        <span class="fw-medium"><%= post.user.email %></span>
                      </div>
                      <div class="d-flex align-items-center">
                        <i class="fas fa-clock text-muted me-2"></i>
                        <span class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</span>
                      </div>
                    </div>
                    
                    <p class="post-excerpt">
                      <%= truncate(post.body, length: 120) %>
                    </p>
                    
                    <div class="post-stats">
                      <div class="d-flex align-items-center">
                        <span class="badge bg-info me-2">
                          <i class="fas fa-comments me-1"></i>
                          <%= post.comments_count %>
                        </span>
                        <span class="badge bg-secondary">
                          <i class="fas fa-eye me-1"></i>
                          <%= rand(10..500) %>
                        </span>
                      </div>
                      <div class="d-flex gap-2">
                        <%= link_to post_path(post), class: "btn btn-outline-primary btn-sm" do %>
                          <i class="fas fa-arrow-right me-1"></i>Read
                        <% end %>
                        <% if user_signed_in? && post.user == current_user %>
                          <%= link_to edit_post_path(post), class: "btn btn-outline-warning btn-sm" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-warning text-center">
            <i class="fas fa-search"></i>
            <h5>No posts found</h5>
            <p class="mb-0">
              <% if @filter_params&.values&.any?(&:present?) %>
                Try adjusting your search criteria or filters.
              <% else %>
                No posts have been published yet.
              <% end %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
