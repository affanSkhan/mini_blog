<article>
  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <section class="alert alert-danger">
        <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </section>
    <% end %>

    <section class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true, autofocus: true %>
    </section>

    <section class="mb-3">
      <%= form.label :body, class: "form-label" %>
      <%= form.text_area :body, class: "form-control", rows: 8, required: true %>
    </section>

    <section class="mb-3">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, Post.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "form-select" %>
    </section>

    <%# Example image with alt and dimensions for Lighthouse %>
    <section class="mb-3">
      <img src="<%= image_url('icon.png') %>" alt="Mini Blog Icon" width="64" height="64" loading="lazy">
    </section>

    <section class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
    </section>
  <% end %>
</article> 