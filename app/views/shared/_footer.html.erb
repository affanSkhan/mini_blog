<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-4">
        <h5>
          <i class="fas fa-blog me-2"></i>Mini Blog
        </h5>
        <p class="mb-3">A modern, fast, and beautiful blogging platform built with Ruby on Rails. Share your thoughts with the world.</p>
        <div class="d-flex gap-3">
          <a href="#" class="text-decoration-none">
            <i class="fab fa-twitter fa-lg"></i>
          </a>
          <a href="#" class="text-decoration-none">
            <i class="fab fa-github fa-lg"></i>
          </a>
          <a href="#" class="text-decoration-none">
            <i class="fab fa-linkedin fa-lg"></i>
          </a>
        </div>
      </div>
      
      <div class="col-md-2 mb-4">
        <h5>Platform</h5>
        <ul class="list-unstyled">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Posts", posts_path %></li>
          <li><%= link_to "API Explorer", api_explorer_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <li><%= link_to "New Post", new_post_path %></li>
          <% end %>
        </ul>
      </div>
      
      <div class="col-md-2 mb-4">
        <h5>Account</h5>
        <ul class="list-unstyled">
          <% if user_signed_in? %>
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= link_to "Settings", "#" %></li>
            <% if current_user.admin? %>
              <li><%= link_to "Admin", admin_dashboard_path %></li>
            <% end %>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
      
      <div class="col-md-4 mb-4">
        <h5>Newsletter</h5>
        <p class="mb-3">Stay updated with the latest posts and features.</p>
        <div class="input-group">
          <input type="email" class="form-control" placeholder="Enter your email">
          <button class="btn btn-primary" type="button">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="row align-items-center">
        <div class="col-md-6">
          <p class="mb-0">&copy; <%= Date.current.year %> Mini Blog. All rights reserved.</p>
        </div>
        <div class="col-md-6 text-md-end">
          <ul class="list-inline mb-0">
            <li class="list-inline-item">
              <%= link_to "Privacy Policy", "#" %>
            </li>
            <li class="list-inline-item">
              <%= link_to "Terms of Service", "#" %>
            </li>
            <li class="list-inline-item">
              <%= link_to "Contact", "#" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer> 